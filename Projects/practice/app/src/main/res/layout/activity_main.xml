<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_background"
        android:text="is main activity"
        android:layout_centerInParent="true"
        />
    
    <Button
        android:id="@+id/firstPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to first page"
        android:layout_below="@+id/mainTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/secondPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to second page"
        android:layout_below="@+id/firstPageBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/photoAlbumBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to photo album"
        android:layout_below="@+id/secondPageBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>