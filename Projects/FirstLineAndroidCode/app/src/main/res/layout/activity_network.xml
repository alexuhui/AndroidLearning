<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sendRequestBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sendXMLRequestBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send XML Request"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sendJSONRequestBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send Json Request"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/comRequestBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Common Request1"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/comRequestBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Common Request2"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/responseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>